{
    "api": {
      "baseUrl": "/api/v1",
      "timeout": 30000
    },
    "theme": {
      "defaultTheme": "light",
      "persistKey": "dashboard-theme"
    },
    "notifications": {
      "defaultDuration": 5000,
      "position": "top-right"
    },
    "pagination": {
      "defaultPageSize": 10,
      "pageSizeOptions": [10, 20, 50, 100]
    },
    "dateFormat": "yyyy-MM-dd HH:mm:ss",
    "currency": {
      "code": "XOF",
      "symbol": "FCFA",
      "position": "after"
    },
    "charts": {
      "colors": {
        "primary": ["#49A3F1", "#0045CE"],
        "success": ["#00AC4F", "#DCF5E8"],
        "error": ["#D00049", "#FFE0E3"],
        "warning": ["#D29302", "#FCE6B3"]
      },
      "defaults": {
        "responsive": true,
        "maintainAspectRatio": false
      }
    }
  }